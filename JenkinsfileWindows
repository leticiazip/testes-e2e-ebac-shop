pipeline {
    agent any

    stages {
        stage('Clonar reposit√≥rio') {
            steps {
                git branch: 'pipeline', url: 'https://github.com/leticiazip/testes-e2e-ebac-shop.git'
            }
        }
        stage('Instalar dependencia') {
            steps {
                bat 'npm install'
            }
        }
        stage('Executar teste') {
            steps {
                sh 'npx cypress open'
                bat 'NO_COLOR=1 npm run cy:run'
            }
        }
    }
}